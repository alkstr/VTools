<Window
    x:Class="VTools.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assets="clr-namespace:VTools.Assets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tabs="clr-namespace:VTools.Tabs"
    xmlns:vm="using:VTools.ViewModels"
    Title="VTools"
    Width="600"
    Height="720"
    MinWidth="600"
    MinHeight="720"
    d:DesignHeight="720"
    d:DesignWidth="600"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="{x:Static assets:Resources.Downloader_Tab_Header}">
            <tabs:DownloaderTab />
        </TabItem>
        <TabItem Header="{x:Static assets:Resources.Editor_Tab_Header}">
            <tabs:EditorTab />
        </TabItem>
        <TabItem Header="{x:Static assets:Resources.Settings_Tab_Header}">
            <tabs:SettingsTab />
        </TabItem>
    </TabControl>
</Window>
