<UserControl
    x:Class="VTools.Tabs.DownloaderTab"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assets="clr-namespace:VTools.Assets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:VTools.ViewModels"
    d:DesignHeight="{DynamicResource WindowHeight}"
    d:DesignWidth="{DynamicResource WindowWidth}"
    x:DataType="vm:DownloaderViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:DesignDownloaderViewModel />
    </Design.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/WindowResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="16,16,16,24" RowDefinitions="auto, 16, *">
        <StackPanel Grid.Row="0" Spacing="16">
            <Image
                Name="ThumbnailImage"
                Height="240"
                RenderOptions.BitmapInterpolationMode="HighQuality"
                Source="{Binding Media.Thumbnail}">
                <FlyoutBase.AttachedFlyout>
                    <Flyout ShowMode="Transient" />
                </FlyoutBase.AttachedFlyout>
            </Image>

            <SelectableTextBlock Height="48">
                <Run
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding Media.Title}" />
                <LineBreak />
                <Run Text="{Binding Media.Channel}" />
            </SelectableTextBlock>

            <Grid ColumnDefinitions="*, 16, auto" RowDefinitions="auto, 16, auto">
                <TextBox
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="{Binding Media.URL, Mode=TwoWay}"
                    TextChanged="OnURLChanged"
                    TextWrapping="NoWrap"
                    Watermark="{x:Static assets:Resources.MediaURL_TextBox_Watermark}" />

                <Button
                    Name="DownloadButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Width="96"
                    HorizontalContentAlignment="Center"
                    Click="DownloadAsync"
                    Content="{x:Static assets:Resources.Download_Button_Content}">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout ShowMode="TransientWithDismissOnPointerMoveAway" />
                    </FlyoutBase.AttachedFlyout>
                </Button>

                <ComboBox
                    Grid.Row="2"
                    Grid.Column="3"
                    Width="96"
                    HorizontalContentAlignment="Center"
                    ItemsSource="{Binding Media.Formats}"
                    SelectedItem="{Binding Media.Format}" />
            </Grid>
        </StackPanel>

        <Expander
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Header="{x:Static assets:Resources.Logs_Expander_Header}">
            <Grid RowDefinitions="*, 16, auto">
                <TextBox
                    Name="LogsTextBox"
                    Grid.Row="0"
                    IsReadOnly="True"
                    Text="{Binding Logger.String}" />

                <StackPanel
                    Grid.Row="2"
                    FlowDirection="RightToLeft"
                    Orientation="Horizontal"
                    Spacing="16">
                    <Button
                        Width="96"
                        HorizontalContentAlignment="Center"
                        Click="ClearLogs"
                        Content="{x:Static assets:Resources.ClearLogs_Button_Content}" />

                    <Button
                        Width="96"
                        HorizontalContentAlignment="Center"
                        Click="CopyLogs"
                        Content="{x:Static assets:Resources.CopyLogs_Button_Content}" />
                </StackPanel>
            </Grid>
        </Expander>
    </Grid>
</UserControl>
