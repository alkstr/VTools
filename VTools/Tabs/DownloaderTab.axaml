<UserControl
    x:Class="VTools.Tabs.DownloaderTab"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:assets="clr-namespace:VTools.Assets"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:VTools.ViewModels"
    d:DesignHeight="{DynamicResource WindowHeight}"
    d:DesignWidth="{DynamicResource WindowWidth}"
    x:DataType="vm:DownloaderViewModel"
    mc:Ignorable="d">
    <Design.DataContext>
        <vm:DesignDownloaderViewModel />
    </Design.DataContext>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Assets/WindowResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <ScrollViewer Margin="0,0,0,12" Padding="28,0">
        <StackPanel Spacing="16">
            <Image
                Name="ThumbnailImage"
                Height="240"
                RenderOptions.BitmapInterpolationMode="HighQuality"
                Source="{Binding Media.Thumbnail}">
                <FlyoutBase.AttachedFlyout>
                    <Flyout ShowMode="Transient" />
                </FlyoutBase.AttachedFlyout>
            </Image>

            <SelectableTextBlock TextWrapping="Wrap">
                <Run
                    FontSize="18"
                    FontWeight="Bold"
                    Text="{Binding Media.Title}" />
                <LineBreak />
                <Run Text="{Binding Media.Channel}" />
            </SelectableTextBlock>

            <Grid ColumnDefinitions="*, 16, auto">
                <TextBox
                    Grid.Column="0"
                    Text="{Binding Media.URL, Mode=TwoWay}"
                    TextChanged="OnURLChanged"
                    TextWrapping="NoWrap"
                    Watermark="{x:Static assets:Resources.MediaURL_TextBox_Watermark}" />

                <Button
                    Name="DownloadButton"
                    Grid.Column="2"
                    Width="128"
                    HorizontalContentAlignment="Center"
                    Click="DownloadAsync"
                    Content="{x:Static assets:Resources.Download_Button_Content}">
                    <FlyoutBase.AttachedFlyout>
                        <Flyout ShowMode="TransientWithDismissOnPointerMoveAway" />
                    </FlyoutBase.AttachedFlyout>
                </Button>
            </Grid>

            <Grid ColumnDefinitions="auto, 16, auto">
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Text="{x:Static assets:Resources.Format_TextBlock}" />

                <ComboBox
                    Grid.Column="2"
                    Width="96"
                    HorizontalContentAlignment="Center"
                    ItemsSource="{Binding Media.Formats}"
                    SelectedItem="{Binding Media.Format}" />
            </Grid>

            <Expander HorizontalAlignment="Stretch" Header="{x:Static assets:Resources.Logs_Expander_Header}">
                <StackPanel Spacing="16">
                    <TextBox
                        Name="LogsTextBox"
                        IsReadOnly="True"
                        MinLines="8"
                        Text="{Binding Logger.String}" />

                    <StackPanel
                        FlowDirection="RightToLeft"
                        Orientation="Horizontal"
                        Spacing="16">
                        <Button
                            Width="160"
                            HorizontalContentAlignment="Center"
                            Click="ClearLogs"
                            Content="{x:Static assets:Resources.ClearLogs_Button_Content}" />

                        <Button
                            Width="160"
                            HorizontalContentAlignment="Center"
                            Click="CopyLogs"
                            Content="{x:Static assets:Resources.CopyLogs_Button_Content}" />
                    </StackPanel>
                </StackPanel>
            </Expander>
        </StackPanel>
    </ScrollViewer>
</UserControl>
